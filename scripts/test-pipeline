#!/bin/bash

docker network inspect mine-support &>/dev/null || docker network create mine-support

docker-compose -f docker-compose.yaml -f docker-compose.test.yaml -f docker-compose.pipeline.yaml down -v
docker-compose -f docker-compose.yaml -f docker-compose.test.yaml -f docker-compose.pipeline.yaml build --no-cache mine-support-calculation-service
docker-compose -f docker-compose.yaml -f docker-compose.test.yaml -f docker-compose.pipeline.yaml up --force-recreate mine-support-calculation-service
